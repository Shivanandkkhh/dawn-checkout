 {% style %}
{% comment %} {% for block in section.blocks %}
.gold-science__card-image.no-float.is-hidden-mobile-only{
    background-image: url({% render 'shopify-responsive-image' , image: block.settings.image_desktop ,  aspect_ratio: 1 %});
}
 {% endfor %} {% endcomment %}

@media(min-width: 855px){
    .gold-science__slide.row-reverse {
        grid-template-areas: "item2 item1"
    }

    .gold-science__slide.row {
        grid-template-areas: "item1 item2"
    }

    .gold-science__slide .item1{
        grid-area: item1;
    }

    .gold-science__slide .item2{
        grid-area: item2;
    }
}
{% endstyle %} 

{% render 'landing-page.gold.v2.science', block_data: section.blocks %}

